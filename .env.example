# Django Environment Configuration
# Copy this file to .env and update with your actual values

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Database Configuration
# For SQLite (Development)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# For MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/database_name

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Email Configuration (for password reset)
# OPTION 1: Console Backend (Development - prints to terminal)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# OPTION 2: Gmail SMTP (Production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-college-email@iiitkottayam.ac.in
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=Sanrakshan <noreply@iiitkottayam.ac.in>

# OPTION 3: College SMTP Server
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=mail.iiitkottayam.ac.in
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=admin@iiitkottayam.ac.in
# EMAIL_HOST_PASSWORD=college-email-password
# DEFAULT_FROM_EMAIL=IIIT Kottayam Storage <storage@iiitkottayam.ac.in>

# College-specific Configuration
COLLEGE_NAME=Your College Name
COLLEGE_EMAIL_DOMAIN=@yourcollege.edu
COLLEGE_ADDRESS=Your College Address

# Media and Static Files
MEDIA_ROOT=media
STATIC_ROOT=staticfiles

# Security Settings (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging Level
LOG_LEVEL=INFO

# Time Zone
TIME_ZONE=Asia/Kolkata
